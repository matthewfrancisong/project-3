<div class = container>

<h1>Add Guests</h1>

<%= form_for @new_guest do |f| %>
  <%= f.label("Name:")%>
  <%= f.text_field :name %>
  <%= f.label("Email:")%>
  <%= f.email_field :email %>
  <%= f.submit("Add New Guest", class: 'btn') %>
  <%= link_to guests_path, class: 'btn' do %>Return to Guestlist<% end %>
<% end %>

</div>
