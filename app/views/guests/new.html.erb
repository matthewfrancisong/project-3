<ul class="progressbar">
  <% if @guests.count > 0 %>
    <li class="active">
  <% else %>
    <li>
  <% end %>
    Add guests</li>

    <li>Send emails</li>
    <li>Manage seating</li>
    <li>Review RSVPs</li>
</ul>
<div class = container>


<h1>Add Guests</h1>

<%= form_for @new_guest do |f| %>
  <%= f.label("Name:")%>
  <%= f.text_field :name %>
  <%= f.label("Email:")%>
  <%= f.email_field :email %>
  <%= f.submit("Add New Guest", class: 'btn') %>
  <%= link_to guests_path, class: 'btn' do %>Return to Guest List<% end %>
<% end %>

</div>
